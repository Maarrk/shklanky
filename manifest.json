{
  "manifest_version": 2,
  "name": "shklanky",
  "description": "Ring a bell every half hour in a pattern used on ships",
  "version": "0.0.1",
  "icons": {
    "64": "icons/icon.png"
  },
  "permissions": [
    "alarms",
    "notifications"
  ],
  "background": {
    "page": "background-page.html"
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/icon.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "shklanky"
  },
  "web_accessible_resources": [
    "sounds/*.mp3"
  ]
}