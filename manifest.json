{
  "manifest_version": 2,
  "name": "shklanky",
  "description": "Ring a bell every half hour in a pattern used on ships",
  "version": "0.0.3",
  "icons": {
    "48": "icons/bell-48.png",
    "96": "icons/bell-96.png"
  },
  "permissions": [
    "alarms",
    "notifications",
    "storage"
  ],
  "background": {
    "page": "background-page.html"
  },
  "browser_action": {
    "default_icon": {
      "64": "icons/bell-64.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "Shklanky"
  },
  "web_accessible_resources": [
    "sounds/*.mp3"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "shklanky@lukasiewicz.tech"
    }
  }
}